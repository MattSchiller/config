# Install Command Line Programs
###############################
echo ""
echo "Installing command line programs..."
binaries=(
    git
    graphicsmagick
    rename
    zopfli
    ffmpeg
    python3
    ctags
    trash
    node
    autojump
    tmux
    htop
    vim
    tree
    zsh
    the_silver_searcher
    ack
)
brew install ${binaries[@]}

# Install GUI Programs
###############################
echo ""
echo "Installing homebrew cask..."
# Install cask
brew install caskroom/cask/brew-cask

echo ""
echo "Installing GUI Applications..."
# Apps
apps=(
    dropbox
    box-sync
    adium
    audacity
    calibre
    kaleidoscope
    keepassx
    handbrake
    p4merge
    xtraFinder
    processing
    the-unarchiver
    utorrent
    disk-inventory-x
    google-chrome
    firefox
    spotify
    iterm2
    virtualbox
    flux
    vlc
    skype
    evernote
    xee
    bettertouchtool
)
# Install apps to /Applications
# Default is: /Users/$user/Applications
brew cask install --appdir="/Applications" ${apps[@]}
